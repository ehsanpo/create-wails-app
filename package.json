{
  "name": "create-wails-app",
  "version": "0.1.0",
  "description": "Interactive CLI for scaffolding Wails desktop applications",
  "main": "dist/index.js",
  "bin": {
    "create-wails-app": "./bin/run.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepack": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "npm run build && node bin/run.js",
    "clean": "rimraf dist",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "wails",
    "cli",
    "scaffolding",
    "desktop",
    "electron-alternative",
    "go",
    "generator",
    "react",
    "vue",
    "svelte",
    "solid",
    "typescript",
    "create-app"
  ],
  "author": "E.P. <ehsanpo@users.noreply.github.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ehsanpo/create-wails-app.git"
  },
  "bugs": {
    "url": "https://github.com/ehsanpo/create-wails-app/issues"
  },
  "homepage": "https://github.com/ehsanpo/create-wails-app#readme",
  "dependencies": {
    "@oclif/core": "^3.15.1",
    "chalk": "^5.3.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
